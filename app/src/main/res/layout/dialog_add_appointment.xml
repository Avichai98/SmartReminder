<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Form Layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Appointment Title Input -->
        <EditText
            android:id="@+id/etTitle"
            android:hint="Appointment Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Appointment Date Input -->
        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Date"
            android:focusable="false"
            android:clickable="true" />

        <!-- Appointment Time Input -->
        <EditText
            android:id="@+id/etTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Time"
            android:focusable="false"
            android:clickable="true" />

        <!-- Appointment Duration Input -->
        <EditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Duration"
            android:focusable="false"
            android:clickable="true" />

        <!-- Appointment Location Input -->
        <EditText
            android:id="@+id/etLocation"
            android:hint="Location (Optional)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Customer Name Input -->
        <EditText
            android:id="@+id/etCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Customer Name"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp" />

        <!-- Customer Email Input -->
        <EditText
            android:id="@+id/etCustomerEmail"
            android:hint="Customer Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btnSave"
            android:text="Save Appointment"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
