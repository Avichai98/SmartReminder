<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Form Layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Appointment Title Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTitle"
            android:hint="@string/appointment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Appointment Date Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_date"
            android:focusable="false"
            android:clickable="true" />

        <!-- Appointment Time Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_time"
            android:focusable="false"
            android:clickable="true" />

        <!-- Appointment Duration Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_duration"
            android:focusable="false"
            android:clickable="true" />

        <!-- Appointment Location Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etLocation"
            android:hint="@string/location_optional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Customer Name Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCustomerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/customer_name"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp" />

        <!-- Customer Email Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCustomerEmail"
            android:hint="@string/customer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:text="@string/save_appointment"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
